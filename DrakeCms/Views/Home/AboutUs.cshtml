@{
    ViewData["Title"] = "About Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Us</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: #f8f9fa;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .container {
            width: 80%;
            max-width: 1000px;
            margin: 40px auto;
            text-align: center;
        }

        h1 {
            font-size: 36px;
            color: #007bff;
            margin-bottom: 10px;
        }

        .about-text {
            font-size: 18px;
            color: #555;
            line-height: 1.6;
            margin-bottom: 30px;
        }

        .team {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
            margin-bottom: 40px;
        }

        .team-member {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            width: 250px;
        }

            .team-member img {
                width: 100%;
                border-radius: 50%;
                margin-bottom: 15px;
            }

            .team-member h3 {
                font-size: 20px;
                color: #007bff;
                margin: 5px 0;
            }

            .team-member p {
                color: #777;
                font-size: 14px;
            }

        .contact-form {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            text-align: left;
            max-width: 600px;
            margin: auto;
        }

            .contact-form h2 {
                font-size: 24px;
                color: #007bff;
                margin-bottom: 10px;
                text-align: center;
            }

            .contact-form input,
            .contact-form textarea {
                width: 100%;
                padding: 10px;
                margin: 10px 0;
                border: 1px solid #ddd;
                border-radius: 8px;
                font-size: 16px;
            }

            .contact-form button {
                width: 100%;
                padding: 12px;
                background: #007bff;
                color: white;
                border: none;
                border-radius: 8px;
                font-size: 18px;
                cursor: pointer;
                transition: 0.3s;
            }

                .contact-form button:hover {
                    background: #0056b3;
                }
    </style>
</head>
<body>
    <div class="container">
        <h1>About Us</h1>
        <p class="about-text">
            Welcome to our company! We are a dedicated team of professionals committed to delivering the best services to our clients.
        </p>

        <div class="team">
            <div class="team-member">
                <img src="https://via.placeholder.com/150" alt="Team Member">
                <h3>John Doe</h3>
                <p>CEO & Founder</p>
            </div>
            <div class="team-member">
                <img src="https://via.placeholder.com/150" alt="Team Member">
                <h3>Jane Smith</h3>
                <p>Lead Developer</p>
            </div>
            <div class="team-member">
                <img src="https://via.placeholder.com/150" alt="Team Member">
                <h3>Mike Johnson</h3>
                <p>UI/UX Designer</p>
            </div>
        </div>

        <div class="contact-form">
            <h2>Contact Us</h2>
            <form action="/contact" method="POST">
                <input type="text" name="name" placeholder="Your Name" required>
                <input type="email" name="email" placeholder="Your Email" required>
                <textarea name="message" placeholder="Your Message" rows="5" required></textarea>
                <button type="submit">Send Message</button>
            </form>
        </div>
    </div>
</body>
</html>
