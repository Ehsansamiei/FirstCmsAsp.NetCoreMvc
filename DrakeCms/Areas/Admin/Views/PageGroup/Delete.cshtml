@using DataLayer
@model PageGroup
@{
	ViewData["Title"] = "Edit";
	// Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<head>
	<style>

        h2 {
            font-size: 36px;
            font-weight: bold;
            text-align: center;
            color: #333;
            margin-bottom: 40px;
        }

        h3 {
            font-size: 24px;
            font-weight: normal;
            color: #e74c3c;
        }

        
        dl.collapse-horizontal dt {
            font-weight: bold;
            color: #333;
            margin-bottom: 5px;
        }

        dl.collapse-horizontal dd {
            margin-left: 15px;
            font-size: 16px;
            color: #555;
        }

   
        a.btn {
            margin: 10px;
            padding: 12px 20px;
            font-size: 16px;
            border-radius: 6px;
            display: inline-block;
            text-decoration: none;
            text-align: center;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        
        a.btn-info {
            background-color: #17a2b8;
            color: white;
        }

            a.btn-info:hover {
                background-color: #138496;
                transform: translateY(-3px);
            }

       
        input.btn-danger {
            background-color: #dc3545;
            color: white;
            padding: 12px 30px;
            font-size: 16px;
            border-radius: 6px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            input.btn-danger:hover {
                background-color: #c82333;
                transform: translateY(-3px);
            }

       
        .text-center {
            margin-bottom: 40px;
        }

        
        hr {
            margin: 20px 0;
            border: 0;
            border-top: 1px solid #ddd;
        }

      
        form {
            display: inline-block;
            text-align: center;
            margin-top: 20px;
        }

        
        .buttons {
            display: inline-block;
            text-align: center;
            margin-top: 20px;
        }

	</style>
</head>


<h2>Delete PageGroup</h2>
<hr />

<div class="text-center">

	<h3>Are you sure you want to delete this?</h3>

	<dl class="collapse-horizontal">
		<dt>
			GroupName :
		</dt>
		<dd>
			@Model.GroupTitile
		</dd>
	</dl>

	<form action="/Admin/PageGroup/Delete/@Model.GroupId" method="post">
		<input type="hidden" name="Id" value="@Model.GroupId" />
		<div class="buttons">
			<a class="btn btn-info" href="/Admin/PageGroup">Back To List</a>
			<input type="submit" class="btn btn-danger" value="Delete" />
		</div>
	</form>

</div>
