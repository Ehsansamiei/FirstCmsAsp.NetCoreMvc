@model DataLayer.PageGroup

@{
  	ViewData["Title"] = "Detail";
	// Layout = "~/Views/Shared/_Layout.cshtml";  
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<head>
    <style>
		/* استایل کلی برای صفحه */
		.text-center h2 {
			font-size: 30px;
			font-weight: bold;
			margin-bottom: 20px;
			color: #333;
		}

		/* استایل برای دکمه‌ها */
		a.btn {
			padding: 10px 20px;
			font-size: 16px;
			border-radius: 4px;
			text-decoration: none;
			margin-right: 10px;
			margin-bottom: 10px;
			display: inline-block;
			text-align: center;
			transition: background-color 0.3s ease;
		}

		/* استایل دکمه‌ها */
		a.btn-dark {
			background-color: #343a40;
			color: white;
			transition: background-color 0.3s ease, transform 0.2s ease;
		}

		a.btn-primary {
			background-color: #007bff;
			color: white;
			transition: background-color 0.3s ease, transform 0.2s ease;
		}

		a.btn-warning {
			background-color: #ffc107;
			color: white;
			transition: background-color 0.3s ease, transform 0.2s ease;
		}

		a.btn-danger {
			background-color: #dc3545;
			color: white;
			transition: background-color 0.3s ease, transform 0.2s ease;
		}

		/* استایل دکمه‌ها هنگام hover */
		a.btn-dark:hover {
			background-color: #23272b;
			transform: translateY(-3px);
		}

		a.btn-primary:hover {
			background-color: #0056b3;
			transform: translateY(-3px);
		}

		a.btn-warning:hover {
			background-color: #e0a800;
			transform: translateY(-3px);
		}

		a.btn-danger:hover {
			background-color: #c82333;
			transform: translateY(-3px);
		}

		/* استایل برای جدول */
		table.table {
			width: 100%;
			border-collapse: collapse;
			margin-top: 20px;
		}

			/* استایل سلول‌ها */
			table.table th,
			table.table td {
				padding: 12px;
				text-align: center;
				font-size: 16px;
				border: 1px solid #ddd;
			}

			/* رنگ پس زمینه سرستون */
			table.table th {
				background-color: #f8f9fa;
				font-weight: bold;
			}

			/* تغییر رنگ ردیف‌ها */
			table.table tr:nth-child(even) {
				background-color: #f2f2f2;
			}

			table.table tr:hover {
				background-color: #f1f1f1;
			}

			/* استایل برای لینک‌های جدول */
			table.table td a {
				margin: 0 5px;
			}

			/* استایل دکمه‌های داخل جدول */
			table.table a.btn-sm {
				font-size: 14px;
				padding: 6px 12px;
				border-radius: 4px;
				display: inline-block;
			}
    </style>
</head>

<div class="text-center">

	<h2>@Model.GroupTitile</h2>
</div>

<hr />
<a class="btn btn-dark" href="/Admin">Back To Admin Panel</a>
<hr />

<table class="table table-bordered">
	<tr>
		<th>GroupId</th>
		<th>GroupTitile</th>
	</tr>
	
    <tr>
        <td>@Model.GroupId</td>
        <td>@Model.GroupTitile</td>
        <td>
            <a class="btn btn-warning btn-sm" href="/Admin/PageGroup/Edit/@Model.GroupId">Edit</a>
            <a class="btn btn-danger btn-sm" href="/Admin/PageGroup/Delete/@Model.GroupId">Delete</a>
        </td>
    </tr>
	
</table>

<a class="btn btn-primary" href="/Admin/PageGroup">Back To list</a>