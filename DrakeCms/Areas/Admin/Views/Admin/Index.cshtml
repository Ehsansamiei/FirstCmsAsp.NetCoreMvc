@model IEnumerable<DataLayer.PageGroup>
@{
     //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
            color: #333;
        }

        .container {
            width: 90%;
            max-width: 1200px;
            margin: 20px auto;
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .chart-container, .box {
            background: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 45%;
            min-width: 300px;
            position: relative;
        }

        .box {
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            font-weight: bold;
            background-color: #007bff;
            color: white;
            width: 100%;
        }

        canvas {
            width: 100% !important;
            height: 300px !important;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="box">Overview</div>
        <div class="chart-container">
            <canvas id="barChart1"></canvas>
        </div>
        <div class="chart-container">
            <canvas id="pieChart1"></canvas>
        </div>
        <div class="chart-container">
            <canvas id="lineChart1"></canvas>
        </div>
        <div class="chart-container">
            <canvas id="barChart2"></canvas>
        </div>
        <div class="chart-container">
            <canvas id="pieChart2"></canvas>
        </div>
        <div class="chart-container">
            <canvas id="lineChart2"></canvas>
        </div>
    </div>

    <script>
        function createLineChart(ctx, label, data, color) {
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                    datasets: [{
                        label: label,
                        data: data,
                        borderColor: color,
                        backgroundColor: 'rgba(0, 123, 255, 0.2)',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: true
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                color: "#ddd"
                            }
                        },
                        y: {
                            grid: {
                                color: "#ddd"
                            }
                        }
                    }
                }
            });
        }

        function createBarChart(ctx, label, data, color) {
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                    datasets: [{
                        label: label,
                        data: data,
                        backgroundColor: color,
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: true
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                color: "#ddd"
                            }
                        },
                        y: {
                            grid: {
                                color: "#ddd"
                            }
                        }
                    }
                }
            });
        }

        function createPieChart(ctx, label, data, colors) {
            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: ['A', 'B', 'C', 'D'],
                    datasets: [{
                        label: label,
                        data: data,
                        backgroundColor: colors,
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                }
            });
        }

        createBarChart(document.getElementById('barChart1').getContext('2d'), 'Bar Chart 1', [12, 19, 3, 5, 2, 3], 'rgb(54, 162, 235)');
        createPieChart(document.getElementById('pieChart1').getContext('2d'), 'Pie Chart 1', [10, 20, 30, 40], ['#007bff', '#28a745', '#ffc107', '#dc3545']);
        createLineChart(document.getElementById('lineChart1').getContext('2d'), 'Dataset 1', [10, 20, 15, 25, 30, 40], 'rgb(0, 123, 255)');
        createBarChart(document.getElementById('barChart2').getContext('2d'), 'Bar Chart 2', [8, 14, 6, 9, 4, 7], 'rgb(255, 159, 64)');
        createPieChart(document.getElementById('pieChart2').getContext('2d'), 'Pie Chart 2', [15, 25, 35, 25], ['#6f42c1', '#17a2b8', '#e83e8c', '#fd7e14']);
        createLineChart(document.getElementById('lineChart2').getContext('2d'), 'Dataset 2', [5, 15, 10, 20, 25, 35], 'rgb(255, 99, 132)');
    </script>
</body>
</html>
